{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "module": "ES2022",
    "noEmit": true
  },
  "include": ["vite.config.ts", "src"],
  "exclude": ["node_modules/", "build/"]
}
